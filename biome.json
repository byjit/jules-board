{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**", "!src/styles/globals.css", "!src/components/ui"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnusedImports": {
          "level": "warn",
          "fix": "safe"
        },
        "useExhaustiveDependencies": "warn"
      },
      "suspicious": "off",
      "style": "off",
      "performance": {
        "noImgElement": "off",
        "noBarrelFile": "off",
        "noNamespaceImport": "off"
      },
      "nursery": "off",
      "a11y": "warn"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    }
  },
  "extends": ["ultracite/core", "ultracite/next"]
}
